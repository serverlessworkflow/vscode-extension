{
  "name": "serverless-workflow",
  "displayName": "Serverless Workflow",
  "description": "",
  "version": "2.1.0",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
		"Snippets",
    "Other"
  ],
  "activationEvents": [
    "onCommand:serverlessWorkflow.diagram.preview",
    "onCommand:serverlessWorkflow.diagram.svg",
    "onCommand:serverlessWorkflow.diagram.png"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": [
          "*.json",
          "*.yml",
          "*.yaml"
        ],
        "url": "https://serverlessworkflow.io/schemas/1.0.1/workflow.json"
      }
    ],
    "commands": [
      {
        "command": "serverlessWorkflow.diagram.preview",
        "title": "Serverless Workflow: Preview Diagram"
      },
      {
        "command": "serverlessWorkflow.diagram.svg",
        "title": "Serverless Workflow: Export Diagram to SVG"
      },
      {
        "command": "serverlessWorkflow.diagram.png",
        "title": "Serverless Workflow: Export Diagram to PNG"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId  == json || resourceLangId == yaml",
          "command": "serverlessWorkflow.diagram.preview",
          "group": "2_workspace"
        },
        {
          "when": "resourceLangId  == json || resourceLangId == yaml",
          "command": "serverlessWorkflow.diagram.svg",
          "group": "2_workspace"
        },
        {
          "when": "resourceLangId  == json || resourceLangId == yaml",
          "command": "serverlessWorkflow.diagram.png",
          "group": "2_workspace"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId  == json || resourceLangId == yaml",
          "command": "serverlessWorkflow.diagram.preview",
          "group": "2_workspace"
        },
        {
          "when": "resourceLangId  == json || resourceLangId == yaml",
          "command": "serverlessWorkflow.diagram.svg",
          "group": "2_workspace"
        },
        {
          "when": "resourceLangId  == json || resourceLangId == yaml",
          "command": "serverlessWorkflow.diagram.png",
          "group": "2_workspace"
        }
      ]
    },
    "snippets": [
      {
        "language": "json",
        "path": "./snippets/serverless-workflow.json.code-snippets"
      },
      {
        "language": "yaml",
        "path": "./snippets/serverless-workflow.yaml.code-snippets"
      }
    ],
    "keybindings": [
      {
        "command": "serverlessWorkflow.diagram.preview",
        "key": "alt+shift+s p"
      },
      {
        "command": "serverlessWorkflow.diagram.svg",
        "key": "alt+shift+s v"
      },
      {
        "command": "serverlessWorkflow.diagram.png",
        "key": "alt+shift+s i"
      }
    ],
    "configurationDefaults": {
      "[yaml]": {
        "editor.quickSuggestions.other": true,
        "editor.quickSuggestions.strings": true
      },
      "yaml.schemas": {
        "https://serverlessworkflow.io/schemas/1.0.1/workflow.json": ["*.yml", "*.yaml"]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@serverlessworkflow/sdk": "^1.0.1",
    "mermaid": "^11.6.0",
    "npm": "^10.4.0"
  }
}
